<%= "#{issue.tracker.name} ##{issue.id}: #{issue.subject}" %>
<%= issue_url %>

<%=l(:field_author)%>: <%= issue.author %>
<%=l(:field_status)%>: <%= issue.status %>, <%=l(:field_priority)%>: <%= issue.priority %>
<%- if issue.assigned_to then -%><%=l(:field_assigned_to)%>: <%= issue.assigned_to %><%- end -%>
<%- if issue.category then -%><%=l(:field_category)%>: <%= issue.category %><%- end -%>
<%- if issue.fixed_version -%><%=l(:field_fixed_version)%>: <%= issue.fixed_version %><%- end -%>
<% issue.custom_values.each do |c| %><%= c.custom_field.name %>: <%= show_value(c) %>
<% end %>

<%= issue.description %>
